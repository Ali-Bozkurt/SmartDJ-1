{
	"name" : "Spotilize",
	"version": "0.0.2",
	"description": "Chrome Extension to capture Spotify Audio and analyze the frequency data for a visualizer",
	"permissions": [
		"activeTab",
		"tabCapture",
		"tabs"
	],
	"content_scripts":[
		{
			"matches": ["http://localhost:8080/*", "https://spotilize.herokuapp.com/*"],
			"js": ["inject.js"]
		}
	],
	"browser_action": {
		"default_icon": { 
			"16": "images/icon16.png", 
			"24": "images/icon24.png",
			"32": "images/icon32.png" 
		},
		"default_title": "Spotilize", 
		"default_popup": ""
	},
	"externally_connectable": {
		"matches": ["http://localhost:8080/*", "https://spotilize.herokuapp.com/*"]
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"manifest_version": 2
}